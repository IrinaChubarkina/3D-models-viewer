@page "/contact"
@inherits LayoutComponentBase


<div class="contact-container">
    <img src="mem-face-left.png" alt="Mirrored Shape Image" class="left-side-image">

    <!-- Contact Form Section -->
    <div class="contact-form-section">
        <form class="contact-form" @onsubmit="HandleSubmit">
            <h3>Send a Message</h3>
            <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" id="name" @bind="name" required/>
            </div>
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" id="email" @bind="email" required/>
            </div>
            <div class="form-group">
                <label for="message">Message:</label>
                <textarea id="message" @bind="message" required></textarea>
            </div>
            <button type="submit">Send Message</button>
        </form>
    </div>

    <div class="contact-details-section">
        <h3>Contact Information</h3>
        <div class="contact-item">
            <i class="fab fa-telegram"></i>
            <p>Telegram: <a href="https://t.me/yourusername" target="_blank">@@dimitris</a></p>
        </div>
        <div class="contact-item">
            <i class="fas fa-phone"></i>
            <p>Phone: <a href="tel:+1234567890">+30 690 8644950</a></p>
        </div>
        <div class="contact-item">
            <i class="fas fa-map-marker-alt"></i>
            <p>Address: 34001 Karystos, Greece</p>
        </div>
        <div class="contact-item">
            <i class="fas fa-envelope"></i>
            <p>Email: <a href="mailto:your-email@example.com">kalapodas@hotmail.com</a></p>
        </div>
        <div class="contact-item">
            <i class="fas fa-globe"></i>
            <p>Website: <a href="https://kalapodasportfolio.com" target="_blank">kalapodasportfolio.com</a></p>
        </div>
        <div class="contact-item">
            <i class="fab fa-linkedin"></i>
            <p>LinkedIn: <a href="https://www.linkedin.com/in/dimitris-kalapodas-76a322187" target="_blank">Link</a></p>
        </div>
    </div>
    
    <img src="mem-face.png" alt="Shape Image" class="bottom-right-image">
    

</div>


@code {
    private string name;
    private string email;
    private string message;

    private void HandleSubmit()
    {
        // Handle form submission (e.g., send email, display confirmation, etc.)
        Console.WriteLine($"Name: {name}, Email: {email}, Message: {message}");
        // Reset form fields if needed
        name = string.Empty;
        email = string.Empty;
        message = string.Empty;
    }

}

