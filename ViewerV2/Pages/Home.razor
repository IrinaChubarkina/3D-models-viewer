@page "/"
@inherits LayoutComponentBase

<div class="home-container">
    
    <div class="home-image">
        <img src="r001-026.png" alt="Dimitris" />
    </div>
    
    <div class="home-content">
        <h3>Hello!</h3>
        <h2>I'm <span class="highlight">Dimitris Kalapodas</span></h2>
        <h3>A Freelance Design Engineer based in Greece</h3>

        <div class="home-links">
            <a href="/3d-models" class="btn">My Works</a>
            <a href="/contact" class="btn btn-outline">Contact Me</a>
        </div>
    </div>

</div>

<style>
    /* Main Container */
    .home-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        height: 100vh;
        padding: 2em;
        background-color: inherit; /* Same as body background */
        color: #fff;
    }

    /* Content section */
    .home-content {
        flex: 1;
        text-align: right;
    }

    h1 {
        font-size: 3em; /* Smaller Hello! */
        font-weight: 400; /* Less bold */
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; /* Even, modern font */
        margin: 0;
    }

    h2 {
        font-size: 4.5em; /* Bigger for "I'm Dima Petrov" */
        font-weight: 700; /* Thicker letters for a more designed look */
        margin: 0.5em 0;
    }

    h3 {
        font-size: 2em;
        margin: 0.5em 0 2em 0;
        color: #ccc; /* Lighter gray for subtitle */
    }

    .highlight {
        color: #ffcc00; /* Yellow highlight for "Dima Petrov" */
    }

    /* Button styles */
    .home-links {
        display: flex;
        gap: 1.5em;
    }

    .btn {
        text-decoration: none;
        padding: 0.75em 1.5em;
        background-color: #ffcc00;
        color: #222;
        font-weight: bold;
        border-radius: 4px;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

    .btn:hover {
        background-color: #e6b800; /* Darker yellow on hover */
        transform: scale(1.05);
    }

    /* Transparent, outlined button for "Contact Me" */
    .btn-outline {
        background-color: transparent;
        color: #fff;
        border: 2px solid #fff;
    }

    .btn-outline:hover {
        background-color: #fff;
        color: #222;
        transform: scale(1.05);
    }

    /* Image section */
    .home-image {
        flex: 1;
        text-align: left;
    }

    .home-image img {
        max-width: 400px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.4);
    }

    /* Responsive for smaller screens */
    @@media (max-width: 768px) {
        .home-container {
            flex-direction: column;
            text-align: center;
        }

        .home-image {
            margin-top: 2em;
        }

        .home-image img {
            max-width: 300px;
        }
    }
</style>
